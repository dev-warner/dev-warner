<form class="sign-up" name="newsletter" method="POST" data-netlify="true" netlify-honeypot="bot-field">
    <h4 class="sign-up__title">
        front-end weekly news.
    </h4>

    <input type="hidden" name="form-name" value="newsletter"/>

    <div hidden aria-hidden="true">
        <label>
      Don’t fill this out if you're human:
        <input name="bot-field"/>
        </label>
    </div>

    <div class="sign-up__input-container">
        <input aria-label="email" name="email" required id="email" type="email" class="sign-up__input btn btn__primary" placeholder="example-email@gmail.com"/>
        <button type="submit" class="sign-up__btn btn btn__accent btn__accent--solid js-sparkle">
            <span>Sign up.</span>
